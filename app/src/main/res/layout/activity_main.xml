<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_black"
                android:shadowColor="#F8F8F8"
                android:text="App"
                android:textAlignment="textEnd"
                android:textColor="#FFFCFC"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_black"
                android:text="Task"
                android:textColor="#1CCFB4"
                android:textSize="70sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="103dp" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="Email."
            android:inputType="textEmailAddress"
            android:textColor="#FDFBFB"
            android:textColorHighlight="#FAF6F6"
            android:textColorHint="#F3F1F1" />

        <EditText
            android:id="@+id/Pass"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="ContraseÃ±a."
            android:inputType="textPassword"
            android:textColor="#F8F5F5"
            android:textColorHint="#F8F6F6" />

        <ProgressBar
            android:id="@+id/carga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/Login"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#FFFFFF"
            android:cursorVisible="false"
            android:fontFamily="@font/eb_garamond"
            android:text="Iniciar Sesion."
            app:cornerRadius="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="154dp" />

        <TextView
            android:id="@+id/Registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eb_garamond"
            android:text="Crear Cuenta."
            android:textAlignment="center"
            android:textColor="#FBFBFB" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>