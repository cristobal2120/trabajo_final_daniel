<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Mainlogin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/archivo_black"
            android:text="Registro"
            android:textAlignment="center"
            android:textColor="#FAF6F6"
            android:textColorLink="#FAF6F6"
            android:textSize="70sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <EditText
            android:id="@+id/EmailR"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="Email."
            android:inputType="textEmailAddress"
            android:textColorHint="#F8F2F2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/PassR"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="ContraseÃ±a."
            android:inputType="textPassword"
            android:textColorHint="#F3ECEC"
            android:textColorLink="#F4EFEF" />

        <ProgressBar
            android:id="@+id/carga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/Register"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#1CCFB4"
            android:fontFamily="@font/eb_garamond"
            android:text="Registrar."
            app:cornerRadius="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="138dp" />

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eb_garamond"
            android:text="Volver"
            android:textAlignment="center"
            android:textColor="#F6F4F4" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>