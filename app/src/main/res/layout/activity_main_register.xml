<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainRegister">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/backpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eb_garamond"
            android:text="Back."
            android:textColorHint="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="61dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:fontFamily="@font/archivo_black"
            android:text="Add Tasks"
            android:textAlignment="center"
            android:textColor="#F6F2F2"
            android:textColorHint="#FFFCFC"
            android:textColorLink="#FAF6F6"
            android:textSize="70sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="67dp" />

        <EditText
            android:id="@+id/named"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="Task."
            android:inputType="text"
            android:textColor="#FBF6F6"
            android:textColorHint="#F8F4F4"
            android:textColorLink="#F8F3F3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="67dp" />

        <EditText
            android:id="@+id/detaild"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="#1CCFB4"
            android:ems="10"
            android:fontFamily="@font/eb_garamond"
            android:hint="Details."
            android:inputType="text"
            android:textColorHint="#F3ECEC" />

        <ProgressBar
            android:id="@+id/load"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/edit"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:backgroundTint="#1CCFB4"
            android:fontFamily="@font/eb_garamond"
            android:text="Add."
            app:cornerRadius="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="101dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>